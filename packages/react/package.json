    {
      "path": "./dist/index.mjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "7.24.3",
    "@babel/preset-env": "7.24.3",
    "@babel/preset-react": "7.24.1",
